---
layout: default
---

<div class="container my-4">
  <h1 class="mb-4">{{ page.title | default: "People" }}</h1>

  {%- assign pi = page.profiles | where: "section", "pi" -%}
  {%- if pi and pi.size > 0 -%}
  <section class="mb-5">
    <h2 class="h4 text-center mb-3">Principal Investigator</h2>
    <div class="d-flex justify-content-center">
      {%- assign p = pi[0] -%}
      <div class="card person-card text-center" style="max-width: 200px;">
        <img
          class="card-img-top person-photo"
          src="{{ '/assets/img/' | append: p.image | relative_url }}"
          alt="{{ p.name | escape }}"
        >
        <div class="card-body">
          <h3 class="h5 mb-1">{{ p.name }}</h3>
          <div class="text-muted mb-2">{{ p.role }}</div>
          {%- if p.email -%}
            <div class="mb-2">
              <a href="mailto:{{ p.email | escape }}">{{ p.email }}</a>
            </div>
          {%- endif -%}
          {%- if p.links and p.links.size > 0 -%}
          <div class="person-links d-flex justify-content-center gap-3">
            {%- for l in p.links -%}
              <a href="{{ l.url }}" target="_blank" rel="noopener">
                <i class="{{ l.icon }}"></i>
              </a>
            {%- endfor -%}
          </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </section>
  {%- endif -%}

  {%- assign grads = page.profiles | where: "section", "grads" -%}
  {%- if grads and grads.size > 0 -%}
  <section class="mb-4">
    <h2 class="h4 mb-3">Students</h2>
    <!-- 5 per row on large screens; auto-wrap on smaller -->
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4">
      {%- for p in grads -%}
      <div class="col">
        <div class="card person-card h-100 text-center">
          <img
            class="card-img-top person-photo"
            src="{{ '/assets/img/' | append: p.image | relative_url }}"
            alt="{{ p.name | escape }}"
          >
          <div class="card-body d-flex flex-column">
            <h3 class="h6 mb-1">{{ p.name }}</h3>
            <div class="text-muted mb-2">{{ p.role }}</div>
            {%- if p.email -%}
              <div class="mb-2">
                <a href="mailto:{{ p.email | escape }}">{{ p.email }}</a>
              </div>
            {%- endif -%}
            {%- if p.links and p.links.size > 0 -%}
            <div class="mt-auto person-links d-flex justify-content-center gap-3">
              {%- for l in p.links -%}
                <a href="{{ l.url }}" target="_blank" rel="noopener">
                  <i class="{{ l.icon }}"></i>
                </a>
              {%- endfor -%}
            </div>
            {%- endif -%}
          </div>
        </div>
      </div>
      {%- endfor -%}
    </div>
  </section>
  {%- endif -%}
</div>
